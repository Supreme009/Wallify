<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wallify.app">

    <!-- Permisos para cambiar el fondo -->
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />

    <!-- Permisos de almacenamiento (compatibles con versiones antiguas) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Declarar versión mínima y target -->
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="33" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Wallify"
        android:theme="@style/WallifyTheme">

        <!-- Activity principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantalla de configuración -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

        <!-- Servicio para cambio automático de fondos -->
        <service
            android:name=".WallpaperChanger"
            android:exported="false" />
    </application>

</manifest>